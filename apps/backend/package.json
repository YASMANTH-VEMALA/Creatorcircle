        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.0",
        "express-validator": "^7.2.1",
        "firebase-admin": "^11.11.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.6.0",
        "morgan": "^1.10.0",
        "winston": "^3.11.0",
        "zod": "^4.1.11"
