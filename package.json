{
  "name": "creatorcircle-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CreatorCircle - Social platform for creators",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:mobile",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "dev:backend": "echo 'Backend not ready yet'",
    "build": "npm run build --workspaces --if-present",
    "build:mobile": "npm run build --workspace=apps/mobile --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "reset": "npm run clean && npm install",
    "setup": "npm install && npm run setup --workspaces --if-present",
    "mobile:start": "npm run start --workspace=apps/mobile",
    "mobile:android": "npm run android --workspace=apps/mobile",
    "mobile:ios": "npm run ios --workspace=apps/mobile",
    "mobile:web": "npm run web --workspace=apps/mobile"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}